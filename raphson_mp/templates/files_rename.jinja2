{% extends "base_static.jinja2" %}

{% block title %}
    {% trans %}Rename file{% endtrans %}
{% endblock title %}

{% block content %}

{{ page_heading(gettext('Rename file'), back_url=back_url) }}

<form method="POST" class="form">
    <input type="hidden" name="csrf" value="{{ g.user.csrf }}">
    <input type="hidden" name="path" value="{{ path }}">
    <label for="new-name">{% trans %}New file name{% endtrans %}</label>
    <input type="text" id="new-name" name="new-name" value="{{ name }}"><br>
    <input type="submit" value="{% trans %}Rename{% endtrans %}">
</form>

{% endblock content %}
