{% extends "base_static.jinja2" %}

{% block title %}
    {% trans %}Guessing game{% endtrans %}
{% endblock title %}

{% block styles %}
    <link rel="stylesheet" href="/static/css/games_guess.css">
{% endblock styles %}

{% block content %}

{{ page_heading(gettext('Guessing game'), back_url='/') }}

<div class="boxes">
    <div id="playlists" class="box">
    </div>

    <div id="instructions" class="box">
        <span id="loading-text">{% trans %}Loading{% endtrans %}</span>
        <span hidden id="start-text">{% trans %}Click to start{% endtrans %}</span>
        <span hidden id="reveal-text">{% trans %}Click to reveal{% endtrans %}</span>
        <span hidden id="next-text">{% trans %}Click for next track{% endtrans %}</span>
    </div>

    <div id="cover-container" class="box">
        <div id="cover"></div>
    </div>

    <div id="details" class="box">

    </div>
</div>

<audio id="audio"></audio>
<div hidden id="csrf-token">{{ g.user.csrf }}</div>

<script src="/static/js/base.js"></script>
<script src="/static/js/api.js"></script>
<script src="/static/js/games_guess.js"></script>

{% endblock content %}
